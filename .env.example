# ==============================================================================
# AdSense Publisher Radar - Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in your values
# ==============================================================================

# -----------------------------------------------------------------------------
# Database (Required for all operations)
# -----------------------------------------------------------------------------

# Development: Use SSH tunnel (default)
# Production: Direct connection
DB_HOST=localhost
DB_PORT=54322
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres

# -----------------------------------------------------------------------------
# Supabase (Optional - not actively used, but kept for compatibility)
# -----------------------------------------------------------------------------

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# -----------------------------------------------------------------------------
# AdSense API (Optional - for domain enrichment)
# -----------------------------------------------------------------------------

# Custom AdSense API endpoint
ADSENSE_API_KEY=xxxxxxxxxxxxx

# -----------------------------------------------------------------------------
# On-Demand ISR Revalidation (Production only)
# -----------------------------------------------------------------------------

# Secret for protecting revalidation endpoint
# Generate with: openssl rand -base64 32
REVALIDATE_SECRET=your_super_secret_key_here

# Your production website URL (for revalidation webhooks)
NEXT_PUBLIC_SITE_URL=https://yoursite.com

# -----------------------------------------------------------------------------
# Development Options
# -----------------------------------------------------------------------------

# Skip cache during development
SKIP_CACHE=false

# Node environment
NODE_ENV=development
